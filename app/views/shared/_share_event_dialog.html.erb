<div class="hide-modal">
  <div class="dialog-modal share-event">
    <h2>Share this event with your coworkers</h2>
    <form>
      <fieldset class="inputs">
        <ol>
          <div class="suggestions">
            <p>Customize message</p>
          </div>
          <div class="nested-field">
            <li>
              <textarea rows="4" cols="50">
                  <% if current_user == @event.owner %>
                    I created an event in sched.do
                  <% else %>
                    I voted on an event in sched.do
                  <% end %>
              </textarea>
            </li>
            <li>
              <input type="text" id="auto-complete" />
              <div class="invitation-autocomplete-suggestions" />
            </li>
          </div>
        </ol>
      </fieldset>

      <%= render 'javascript_templates/multiple_invitation_templates' %>

      <div id="invitees">
        <section id='groups' class="groups invited-yammer-groups invited">
          <h4>Invited Yammer Groups</h4>

          <h5 id="invite_groups">Add an entire group to your invite list.</h5> <ul class="invited-groups list-invitees"> </ul>
        </section>
      </div>

      <fieldset class="actions">
        <ol>
          <li class="action input-action"><%= button_to 'Share', '#', class: 'share-button cta' %></li>
        </ol>
      </fieldset>
    </form>
  </div>
</div>
